<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/my_content"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1C86EE">

        <TextView
            android:id="@+id/my_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundmyfragment">

        <TextView
            android:id="@+id/usrid"
            android:layout_width="100dp"
            android:layout_height="60dp"

            android:gravity="center_vertical|left"
            android:text="用户名:"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usrID"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/usrid"
            android:layout_alignRight="@+id/usrid"
            android:layout_marginEnd="-310dp"
            android:layout_marginRight="-310dp"
            android:gravity="center_vertical|right"
            android:text="lele666"
            android:textColor="#000000"
            android:textSize="20dp"
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundmyfragment">

        <TextView
            android:id="@+id/usrname"
            android:layout_width="100dp"
            android:layout_height="45dp"

            android:gravity="center_vertical|left"
            android:text="昵称:"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usrName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignEnd="@+id/usrname"
            android:layout_alignRight="@+id/usrname"
            android:layout_marginEnd="-310dp"
            android:layout_marginRight="-310dp"
            android:gravity="center_vertical|right"
            android:text="快乐的乐乐"
            android:textColor="#000000"
            android:textSize="20dp"
            />
    </RelativeLayout>
</LinearLayout>